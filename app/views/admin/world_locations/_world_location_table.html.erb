<h2><%= title %></h1>

<table id="world-locations" class="table table-striped table-bordered">
  <thead>
    <tr class="table-header">
      <th width="10%">Type</th>
      <th width="60%">Location</th>
      <th width="10%">Status</th>
    </tr>
  </thead>

  <tbody>
    <% world_locations.each do |world_location| %>
      <%= content_tag_for(:tr, world_location) do %>
        <td class="type"><%= world_location.world_location_type.name %></td>

        <td>
          <p>
            <%= link_to world_location.name, [:admin, world_location], class: "name" %>
          </p>
          <p>
            <% if world_location.mission_statement.present? %>
              <span class="mission_statement"><%= format_with_html_line_breaks(world_location.mission_statement) %></span>
            <% else %>
              <em>No mission statement yet</em>, <%= link_to "create one", edit_admin_world_location_path(world_location) %>.
            <% end %>
          </p>
        </td>

        <td class="status"><%= world_location.active? ? "active" : "inactive" %></td>

      <% end %>
    <% end %>

  </tbody>
</table>
